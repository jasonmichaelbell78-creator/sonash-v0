{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["app/**/*.{ts,tsx}", "components/**/*.{ts,tsx}", "lib/**/*.ts"],
  "project": ["app/**/*.{ts,tsx}", "components/**/*.{ts,tsx}", "lib/**/*.ts"],
  "ignore": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "tests/**",
    "dist-tests/**",
    "scripts/**",
    ".next/**"
  ],
  "ignoreDependencies": [
    "@fontsource/*",
    "tailwindcss-animate",
    "tw-animate-css",
    "autoprefixer",
    "firebase-admin",
    "remark-parse",
    "remark-stringify",
    "unified",
    "tailwindcss",
    "@dataconnect/generated",
    "@hookform/resolvers",
    "cmdk",
    "react-day-picker",
    "react-hook-form",
    "react-resizable-panels",
    "recharts",
    "vaul",
    "lint-staged",
    "@firebase/rules-unit-testing",
    "msw"
  ],
  "ignoreBinaries": ["printf", "report", "vitest"],
  "next": {
    "entry": [
      "app/**/{page,layout,loading,error,not-found,template,default,route}.tsx",
      "app/**/middleware.ts",
      "instrumentation.ts"
    ]
  }
}
