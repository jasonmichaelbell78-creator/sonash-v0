{
  "mcpServers": {
    "ccusage": {
      "command": "bunx",
      "args": ["@ccusage/mcp@latest"]
    },
    "sonarcloud": {
      "command": "node",
      "args": ["scripts/mcp/sonarcloud-server.js"],
      "env": {
        "SONAR_TOKEN": "PASTE_YOUR_SONARCLOUD_TOKEN_HERE",
        "SONAR_URL": "https://sonarcloud.io"
      }
    }
  }
}
