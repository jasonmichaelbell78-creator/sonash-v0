# Firebase Configuration
# Get these from your Firebase Project Settings -> General -> Your Apps -> SDK Setup/Config
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase App Check (required for Cloud Functions access)
# Create a reCAPTCHA v3 site key in the Firebase Console â†’ App Check
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Optional: enable App Check debug mode in development only
# Generate a debug token via the browser console and paste it here.
# NEVER use this in production.
NEXT_PUBLIC_APPCHECK_DEBUG_TOKEN=
