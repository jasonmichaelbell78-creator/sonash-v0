rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ==========================================
    // USER PROFILE DOCUMENT
    // Path: /users/{userId}
    // ==========================================
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
                    && request.resource.data.uid == userId;
      allow update: if isOwner(userId)
                    && request.resource.data.uid == userId;
      allow delete: if false;
    }

    // ==========================================
    // DAILY LOGS (Legacy collection)
    // Path: /users/{userId}/daily_logs/{logId}
    // ==========================================
    match /users/{userId}/daily_logs/{logId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // INVENTORY ENTRIES (Spot checks, Night reviews, Gratitude)
    // Path: /users/{userId}/inventoryEntries/{entryId}
    // ==========================================
    match /users/{userId}/inventoryEntries/{entryId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // JOURNAL (Unified journal collection)
    // Path: /users/{userId}/journal/{entryId}
    // ==========================================
    match /users/{userId}/journal/{entryId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.resource.data.userId == userId;
      allow update: if isOwner(userId)
                    && request.resource.data.userId == userId
                    && request.resource.data.createdAt == resource.data.createdAt;
      allow delete: if isOwner(userId);
    }

    // ==========================================
    // MEETINGS (Public read for meeting finder)
    // Path: /meetings/{meetingId}
    // ==========================================
    match /meetings/{meetingId} {
      allow read: if isSignedIn();
      allow write: if false; // Admin only via Firebase console
    }

    // ==========================================
    // QUOTES (Public read for daily inspiration)
    // Path: /quotes/{quoteId}
    // ==========================================
    match /quotes/{quoteId} {
      allow read: if isSignedIn();
      allow write: if false; // Admin only
    }
  }
}
