rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper to check if user has admin custom claim
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // ============================================
    // USER PROFILE DOCUMENTS
    // Path: /users/{userId}
    // ============================================
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if isOwner(userId);
    }

    // ============================================
    // JOURNAL COLLECTION (Cloud Functions ONLY)
    // Path: /users/{userId}/journal/{entryId}
    // ============================================
    match /users/{userId}/journal/{entryId} {
      allow read: if isOwner(userId);
      // Client-side writes allowed with ownership validation
      // NOTE: App Check was removed to restore functionality
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      // Keep delete for GDPR data deletion compliance
      allow delete: if isOwner(userId);
    }

    // ============================================
    // DAILY LOGS COLLECTION (Cloud Functions ONLY)
    // Path: /users/{userId}/daily_logs/{dateId}
    // ============================================
    match /users/{userId}/daily_logs/{dateId} {
      allow read: if isOwner(userId);
      // SECURITY: All writes MUST go through Cloud Function (saveDailyLog)
      // Cloud Function enforces: rate limiting, Zod validation, App Check
      // Direct client writes are BLOCKED to prevent bypassing security controls
      allow create, update: if false;
      // Keep delete for GDPR data deletion compliance
      allow delete: if isOwner(userId);
    }

    // ============================================
    // INVENTORY ENTRIES COLLECTION
    // Path: /users/{userId}/inventoryEntries/{entryId}
    // ============================================
    match /users/{userId}/inventoryEntries/{entryId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) 
                    && request.resource.data.userId == userId;
      allow update: if isOwner(userId)
                    && request.resource.data.userId == userId;
      allow delete: if isOwner(userId);
    }

    // ============================================
    // JOURNAL ENTRIES COLLECTION (Legacy)
    // Path: /users/{userId}/journalEntries/{entryId}
    // ============================================
    match /users/{userId}/journalEntries/{entryId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ============================================
    // PUBLIC COLLECTIONS (Read-only, Admin writes via Cloud Functions)
    // ============================================
    
    // Meetings - Public read, admin-only write via Cloud Functions
    match /meetings/{meetingId} {
      allow read: if true;  // Public access for meeting finder
      allow write: if false; // All writes via adminSaveMeeting/adminDeleteMeeting
    }

    // Sober Living Homes - Public read, admin-only write via Cloud Functions
    match /sober_living/{homeId} {
      allow read: if true;  // Public access for finder
      allow write: if false; // All writes via adminSaveSoberLiving/adminDeleteSoberLiving
    }

    // Daily Quotes - Public read, admin-only write
    match /daily_quotes/{quoteId} {
      allow read: if true;  // Public access for quote widget
      allow write: if isAdmin(); // Only users with admin custom claim
    }


    // Glossary - Public read, admin-only write
    match /glossary/{termId} {
      allow read: if true;  // Public access for glossary feature
      allow write: if isAdmin(); // Only users with admin custom claim
    }

    // Slogans - Public read, admin-only write
    match /slogans/{sloganId} {
      allow read: if true;  // Public access for daily slogan widget
      allow write: if isAdmin(); // Only users with admin custom claim
    }

    // Quick Links - Public read, admin-only write
    match /quick_links/{linkId} {
      allow read: if true;  // Public access for library quick links
      allow write: if isAdmin(); // Only users with admin custom claim
    }

    // Prayers - Public read, admin-only write
    match /prayers/{prayerId} {
      allow read: if true;  // Public access for library prayers
      allow write: if isAdmin(); // Only users with admin custom claim
    }


    // ============================================
    // INTERNAL COLLECTIONS (Cloud Functions only)
    // ============================================
    
    // Rate Limits - Used by Cloud Functions for rate limiting
    match /rate_limits/{docId} {
      allow read, write: if false; // Only Cloud Functions (Admin SDK)
    }
  }
}
