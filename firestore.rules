rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if user owns the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // THE JOURNAL COLLECTION
    // Path: /users/{userId}/journal/{entryId}
    match /users/{userId}/journal/{entryId} {
      
      // 1. READ: Only the owner can read their own journal
      allow read: if isOwner(userId);

      // 2. CREATE: Owner can write, provided the data matches their ID
      allow create: if isOwner(userId) 
                    && request.resource.data.userId == userId;

      // 3. UPDATE: Owner can edit (for "Strikethroughs" or Soft Deletes)
      // We block them from changing the 'userId' or 'createdAt' fields
      allow update: if isOwner(userId)
                    && request.resource.data.userId == userId
                    && request.resource.data.createdAt == resource.data.createdAt;

      // 4. DELETE: We technically allow it, but the UI will prefer "Soft Delete"
      allow delete: if isOwner(userId);
    }
  }
}
