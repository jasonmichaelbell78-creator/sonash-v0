{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-mcp-servers.sh",
            "statusMessage": "Checking MCP availability..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?i)write$",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-write-requirements.sh \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          }
        ]
      },
      {
        "matcher": "^(?i)edit$",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-edit-requirements.sh \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          }
        ]
      },
      {
        "matcher": "^(?i)multiedit$",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/check-edit-requirements.sh \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/analyze-user-request.sh \"$ARGUMENTS\"",
            "statusMessage": "Checking PRE-TASK triggers..."
          }
        ]
      }
    ]
  }
}
