{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "enableAllProjectMcpServers": false,
  "disabledMcpjsonServers": ["rube", "serena", "nextjs-devtools"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/check-mcp-servers.js",
            "statusMessage": "Checking MCP availability..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/check-remote-session-context.js",
            "statusMessage": "Checking remote branches for session context...",
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "node .claude/hooks/stop-serena-dashboard.js",
            "statusMessage": "Stopping Serena dashboard...",
            "timeout": 10000,
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/compact-restore.js",
            "statusMessage": "Restoring context after compaction..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pre-compaction-save.js $ARGUMENTS",
            "statusMessage": "Saving state before compaction..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?i)write$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=write node .claude/hooks/check-requirements.js $ARGUMENTS",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/audit-s0s1-validator.js $ARGUMENTS",
            "statusMessage": "Checking audit S0/S1 compliance..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/component-size-check.js $ARGUMENTS",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/firestore-write-block.js $ARGUMENTS",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/test-mocking-validator.js $ARGUMENTS",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/app-check-validator.js $ARGUMENTS",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/typescript-strict-check.js $ARGUMENTS",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/repository-pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking repository patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-trigger-enforcer.js $ARGUMENTS",
            "statusMessage": "Checking agent recommendations..."
          }
        ]
      },
      {
        "matcher": "^(?i)edit$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=edit node .claude/hooks/check-requirements.js $ARGUMENTS",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/component-size-check.js $ARGUMENTS",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/firestore-write-block.js $ARGUMENTS",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/test-mocking-validator.js $ARGUMENTS",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/app-check-validator.js $ARGUMENTS",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/typescript-strict-check.js $ARGUMENTS",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/repository-pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking repository patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-trigger-enforcer.js $ARGUMENTS",
            "statusMessage": "Checking agent recommendations..."
          }
        ]
      },
      {
        "matcher": "^(?i)multiedit$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=multiedit node .claude/hooks/check-requirements.js $ARGUMENTS",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/component-size-check.js $ARGUMENTS",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/firestore-write-block.js $ARGUMENTS",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/test-mocking-validator.js $ARGUMENTS",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/app-check-validator.js $ARGUMENTS",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/typescript-strict-check.js $ARGUMENTS",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/repository-pattern-check.js $ARGUMENTS",
            "statusMessage": "Checking repository patterns..."
          },
          {
            "type": "command",
            "command": "node .claude/hooks/agent-trigger-enforcer.js $ARGUMENTS",
            "statusMessage": "Checking agent recommendations..."
          }
        ]
      },
      {
        "matcher": "^(?i)read$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/post-read-handler.js $ARGUMENTS",
            "statusMessage": "Processing read operation..."
          }
        ]
      },
      {
        "matcher": "^(askuserquestion|AskUserQuestion|ASKUSERQUESTION)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/decision-save-prompt.js $ARGUMENTS",
            "statusMessage": "Checking decision documentation..."
          }
        ]
      },
      {
        "matcher": "^(?i)bash$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/commit-tracker.js $ARGUMENTS",
            "statusMessage": "Tracking commits...",
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^(task|Task|TASK)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/track-agent-invocation.js $ARGUMENTS",
            "statusMessage": "Tracking agent invocation..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/user-prompt-handler.js $ARGUMENTS",
            "statusMessage": "Processing user prompt..."
          }
        ]
      }
    ]
  }
}
