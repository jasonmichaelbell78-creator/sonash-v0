{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "enableAllProjectMcpServers": false,
  "disabledMcpjsonServers": ["rube", "serena", "nextjs-devtools", "filesystem"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.js"
          },
          {
            "type": "command",
            "command": "node .claude/hooks/check-mcp-servers.js",
            "statusMessage": "Checking MCP availability...",
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "node .claude/hooks/check-remote-session-context.js",
            "statusMessage": "Checking remote branches for session context...",
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "node .claude/hooks/stop-serena-dashboard.js",
            "statusMessage": "Checking for Serena dashboard on port 24282...",
            "continueOnError": true
          },
          {
            "type": "command",
            "command": "node .claude/hooks/global/gsd-check-update.js",
            "statusMessage": "Checking for GSD updates...",
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/compact-restore.js",
            "statusMessage": "Restoring context after compaction..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pre-compaction-save.js $ARGUMENTS",
            "statusMessage": "Saving state before compaction..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?i)write$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=write node .claude/hooks/post-write-validator.js $ARGUMENTS",
            "statusMessage": "Validating write operation..."
          }
        ]
      },
      {
        "matcher": "^(?i)edit$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=edit node .claude/hooks/post-write-validator.js $ARGUMENTS",
            "statusMessage": "Validating edit operation..."
          }
        ]
      },
      {
        "matcher": "^(?i)multiedit$",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TOOL=multiedit node .claude/hooks/post-write-validator.js $ARGUMENTS",
            "statusMessage": "Validating multiedit operation..."
          }
        ]
      },
      {
        "matcher": "^(?i)read$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/post-read-handler.js $ARGUMENTS",
            "statusMessage": "Processing read operation..."
          }
        ]
      },
      {
        "matcher": "^(askuserquestion|AskUserQuestion|ASKUSERQUESTION)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/decision-save-prompt.js $ARGUMENTS",
            "statusMessage": "Checking decision documentation..."
          }
        ]
      },
      {
        "matcher": "^(?i)bash$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/commit-tracker.js $ARGUMENTS",
            "statusMessage": "Tracking commits...",
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "^(task|Task|TASK)$",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/track-agent-invocation.js $ARGUMENTS",
            "statusMessage": "Tracking agent invocation..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/user-prompt-handler.js $ARGUMENTS",
            "statusMessage": "Processing user prompt..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/global/statusline.js",
            "continueOnError": true
          }
        ]
      }
    ]
  }
}
