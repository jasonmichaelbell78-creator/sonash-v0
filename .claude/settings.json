{
  "enableAllProjectMcpServers": false,
  "disabledMcpjsonServers": ["rube", "serena", "nextjs-devtools"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.js\""
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/check-mcp-servers.js\"",
            "statusMessage": "Checking MCP availability..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?i)write$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/check-write-requirements.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/component-size-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/firestore-write-block.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/test-mocking-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/app-check-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/typescript-strict-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/repository-pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking repository patterns..."
          }
        ]
      },
      {
        "matcher": "^(?i)edit$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/check-edit-requirements.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/component-size-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/firestore-write-block.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/test-mocking-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/app-check-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/typescript-strict-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/repository-pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking repository patterns..."
          }
        ]
      },
      {
        "matcher": "^(?i)multiedit$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/check-edit-requirements.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking agent requirements..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking pattern compliance..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/component-size-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking component size..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/firestore-write-block.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking Firestore security..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/test-mocking-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking test mocking patterns..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/app-check-validator.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking App Check..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/typescript-strict-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking TypeScript strictness..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/repository-pattern-check.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking repository patterns..."
          }
        ]
      },
      {
        "matcher": "^(?i)read$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/large-context-warning.js\" \"$ARGUMENTS\"",
            "statusMessage": "Tracking context size..."
          }
        ]
      },
      {
        "matcher": "^(?i)askuserquestion$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/decision-save-prompt.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking decision documentation..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/analyze-user-request.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking PRE-TASK triggers..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/session-end-reminder.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking session status..."
          },
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/.claude/hooks/plan-mode-suggestion.js\" \"$ARGUMENTS\"",
            "statusMessage": "Checking task complexity..."
          }
        ]
      }
    ]
  }
}
