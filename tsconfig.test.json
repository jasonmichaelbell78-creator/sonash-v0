{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "incremental": false,
    "outDir": "dist-tests",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "types": ["node"],
    "target": "ES2019",
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": [
    "components/providers/auth-provider.tsx",
    "lib/**/*.ts",
    "tests/**/*.ts",
    "scripts/reviews/lib/**/*.ts",
    "scripts/reviews/__tests__/**/*.ts",
    "scripts/reviews/backfill-reviews.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-tests"]
}
